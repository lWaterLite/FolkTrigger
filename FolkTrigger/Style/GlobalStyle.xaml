<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ft="clr-namespace:FTCustomControlLibrary;assembly=FTCustomControlLibrary">
    
    <SolidColorBrush x:Key="BorderSolidColorBrush" Color="#5c5c5c" />
    <FontFamily x:Key="IconFont">pack://application:,,,/Assets/Font/#folktrigger</FontFamily>
    
    <Style TargetType="{x:Type TextElement}">
        <Setter Property="FontFamily" Value="Microsoft Yahei" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="Microsoft Yahei" />
        <Setter Property="Foreground" Value="White" />
    </Style>
    
    <Style TargetType="{x:Type ft:Switcher}">
        <Setter Property="Height" Value="28" />
        <Setter Property="Width" Value="76" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderSolidColorBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="ButtonColor" Value="White" />
    </Style>
    
</ResourceDictionary>